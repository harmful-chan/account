<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.account.orm.model">
	<class name="Staff" table="cmp_staff" >
		<id name="id">
			<generator class="native"/>
		</id>
		<property name="number"/>
		<property name="firstName"/>
		<property name="lastName"/>
		<property name="city"/>
		<property name="province"/>
		<property name="country"/>
		<property name="zipCode"/>
		<property name="entryDate"/>
	
		<!-- 一对多 -->
		<many-to-one name="account" class="Account" column="staff_id" insert="false" update="false"/>
		<many-to-one name="department" class="Department" column="staff_id" insert="false" update="false"/>
		<many-to-one name="role" class="Role" column="staff_id" insert="false" update="false"/>
	</class>
</hibernate-mapping>