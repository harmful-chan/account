<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    
    <package name="account-package" abstract="true" extends="struts-default">
        <interceptors>
			<interceptor name="identityInterceptor" class="org.account.web.interceptor.IdentityInterceptor"/>
			<interceptor-stack name="identityStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="identityInterceptor"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
    </package>
    
   
    <package name="home-package" namespace="/Home" extends="account-package">
		<action name="*" class="org.account.web.action.HomeAction" method="{1}">
			<result name="home">/home.jsp</result>
			<result name="input">/home.jsp</result>
			<result name="welcome">/welcome.jsp</result>
			<result name="error" >/home.jsp</result>
			<interceptor-ref name="identityStack"/>
		</action>
    </package>
    
    <package name="user-package" namespace="/User" extends="account-package">
		<action name="*" class="org.account.web.action.UserAction" method="{1}">
			<result>/user.jsp</result>
			<result name="input">/user.jsp</result>
			<result name="error" type="redirectAction">
      			<param name="actionName">home</param>
      			<param name="namespace">/Home</param>
  			</result>
			<interceptor-ref name="identityStack"/>
		</action>
    </package>
    <package name="table-package" namespace="/Table" extends="account-package">
		<action name="*" class="org.account.web.action.TableAction" method="{1}">
			<result>/table.jsp</result>
			<result name="input">/welcome.jsp</result>
			<result name="error" type="redirectAction">
      			<param name="actionName">home</param>
      			<param name="namespace">/Home</param>
  			</result>
			<interceptor-ref name="identityStack"/>
		</action>
    </package>
</struts>
